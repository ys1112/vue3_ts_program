# # 顶层配置声明（必须）
# root = true

# # 通用配置（适用于所有文件）
# [*]
# charset = utf-8
# end_of_line = lf
# indent_style = space
# indent_size = 2
# trim_trailing_whitespace = true
# insert_final_newline = true

# # 特定文件类型配置（可选）
# [*.md]
# trim_trailing_whitespace = false
# max_line_length = 80

# [*.json]
# indent_size = 2

# [*.yml]
# indent_size = 2